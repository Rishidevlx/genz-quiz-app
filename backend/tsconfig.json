{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "lib": [
            "ES2022"
        ],
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": [
            "node",
            "@vercel/node"
        ]
    },
    "include": [
        "api/**/*",
        "lib/**/*",
        "scripts/**/*",
        "types.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}